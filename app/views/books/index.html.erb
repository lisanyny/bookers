<h1><strong>Books</strong></h1>

<table>
  <thead>
    <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @books.each do |book| %>

     <tr>
       <td class="book-title"><%= book.title %></td>
       <td class="book-body"><%= book.body %></td>
       <td class="book-link"><%= link_to 'Show', book_path(book.id), class: "link" %></td>
       <td class="book-link"><%= link_to 'Edit', edit_book_path(book.id), class: "link" %></td>
       <td class="book-link"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "link" %></td>
     </tr>

  <% end %>

  </tbody>
</table>

<h2><strong>New Book</strong></h2>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>

 <%= form_with model: @book, url: '/books', method: :post do |f| %>

   <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
   </div>

   <label for="book_body">Body</label>
   <%= f.text_area :body %>

   <div class="action">
     <%= f.submit ' Create Book ' %>
   </div>

  <% end %>