<h1 class="edit-title">Editing Book</h1>
<% if @book.errors.any? %>
 <%= @book.errors.count %> error prohibited this book from being saved
 <ul>
   <% @book.errore.full_message.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<div class="edit-field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div>
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div class="edit-action">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

<div class="edit-link">
  <%= link_to "Show", book_path(@book.id), class: "link" %>
   |
  <a href="/books">Back</a>
</div>

